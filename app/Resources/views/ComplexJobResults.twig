<h1>Project results - and statistics</h1>


<table class="table table-striped" id="reducejobtable">
    <caption>Map and reduce jobs</caption>
    <thead>
      <tr>
        <th>Worker</th>
        <th>Map</th>
        <th>Reduce</th>
      </tr>
    </thead>
        <tbody>
        {% for worker in job.getStatistics() %}
            <tr>
                <td>{{worker.name}}</td>
                <td>{{worker.mapjobs}}</td>
                <td>{{worker.reducejobs}}</td>
            </tr>
        {% endfor %}
    </tbody>
</table>

<table class="table table-striped" id="reducejobtable">
    <caption>Results</caption>
    <thead>
      <tr>
        <th>Key</th>
        <th>Value</th>
        <th># pairs</th>
      </tr>
    </thead>
        <tbody>
        {% for result in job.getResults() %}
            <tr>
                <td>{{result.key}}</td>
                <td>{{result.value}}</td>
                <td>{{result.paircount}}</td>
            </tr>
        {% endfor %}
    </tbody>
</table>


